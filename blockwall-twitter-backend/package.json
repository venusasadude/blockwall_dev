{
  "name": "blockwall-twitter-backend",
  "version": "1.0.0",
  "description": "Backend for Blockwall Twitter dashboard (Neo4j + Express + TypeScript)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint src --ext .ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "format": "prettier . --write",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "author": "Xavier Ramos",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "neo4j-driver": "^5.26.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.46.4"
  }
}
